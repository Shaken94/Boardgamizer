<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyDialogAlert" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowTitleStyle">@style/MyDialogWindowTitleStyle</item>
        <item name="android:windowTitleBackgroundStyle">@style/MyDialogWindowTitleBackground</item>

        <!-- Button styles -->
        <item name="buttonStyle">@style/MyButtonBarAlertDialog</item>
        <item name="buttonBarButtonStyle">@style/MyButtonBarAlertDialog</item>
    </style>

    <style name="MyDialogWindowTitleStyle" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:textAppearance">@style/MyTextAppearanceTitle</item>
    </style>

    <style name="MyTextAppearanceTitle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyDialogWindowTitleBackground" parent="Base.DialogWindowTitleBackground.AppCompat">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="MyButtonBarAlertDialog" parent="Base.Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
    </style>

